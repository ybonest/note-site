import * as React from 'react';
import { Link } from "react-router-dom";
import { Card, Tag } from '@components/styled';

export const TagsCard = ((tags: string[]): React.FunctionComponent => () => {
  return (
    <Card>
        {tags.map(tag => (
          <Link key={tag} to={'/tags/' + tag}>
            <Tag>{ tag }</Tag>
          </Link>
      ))}
    </Card>
  );
})([<% for (const tag in categoryByTag) { %>
    '<%= tag %>',
  <% } %>
])
